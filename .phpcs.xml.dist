<?xml version="1.0"?>
<ruleset name="Wuunder Shipping CS ruleset">
    <!-- Include WordPress CS rules -->
    <rule ref="WordPress">
        <!-- Exclude Yoda conditions - we prefer normal comparison order -->
        <exclude name="WordPress.PHP.YodaConditions.NotYoda" />
        
        <!-- Allow direct database queries for custom models -->
        <exclude name="WordPress.DB.DirectDatabaseQuery.DirectQuery"/>
        
        <!-- Variable comments are not always necessary with type hints -->
        <exclude name="Squiz.Commenting.VariableComment.Missing" />
        <exclude name="Squiz.Commenting.VariableComment.MissingVar" />
        
        <!-- We will use return types, instead of @return tags -->
        <exclude name="Squiz.Commenting.FunctionComment.MissingReturn" />
        
        <!-- Ignore missing params tags as we use type hinting -->
        <exclude name="Squiz.Commenting.FunctionComment.MissingParamTag"/>
        
        <!-- Allow PSR-4 file naming (not WordPress file naming) -->
        <exclude name="WordPress.Files.FileName.InvalidClassFileName" />
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase" />
        
        <!-- Allow modern PHP features -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax.Found" />
        <exclude name="Universal.Arrays.DisallowShortArraySyntax.Found" />
        
        <!-- Allow modern type hints -->
        <exclude name="PHPCompatibility.FunctionDeclarations.NewParamTypeDeclarations.stringFound" />
        <exclude name="PHPCompatibility.FunctionDeclarations.NewParamTypeDeclarations.boolFound" />
        
        <!-- Allow debug logging in development -->
        <exclude name="WordPress.PHP.DevelopmentFunctions.error_log_error_log" />
        
        <!-- Don't require file comments for simple files -->
        <exclude name="Squiz.Commenting.FileComment.Missing" />
        
        <!-- Allow modern array alignment (less strict) -->
        <exclude name="WordPress.Arrays.MultipleStatementAlignment.DoubleArrowNotAligned" />
        
        <!-- Don't require inline comment punctuation -->
        <exclude name="Squiz.Commenting.InlineComment.InvalidEndChar" />
    </rule>

	 <!-- Add manage_woocommerce as a valid capability to PHPCS  -->
        <rule ref="WordPress.WP.Capabilities">
            <properties>
                <property name="custom_capabilities" type="array">
                    <element value="manage_woocommerce"/>
                </property>
            </properties>
        </rule>

    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="wuunder-shipping"/>
                <element value="default"/>
            </property>
        </properties>
    </rule>
</ruleset>
